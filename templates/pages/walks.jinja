{% extends 'base.jinja' %}

{% block content %}
    <div class="flex flex-col items-center justify-center w-full h-content">

        {% for walk in walks %}
            <div class="flex flex-col border-b border-gray-300 pb-8">

                <div class="flex items-center justify-around px-8 py-16 gap-16">
                    <h1 class="text-5xl font-bold pl-8">{{ walk.name }}</h1>
                    <p class="px-8 text-balance">{{ walk.description }}</p>
                </div>

                <div class="flex items-center justify-around">
                    {% for image in walk.images %}
                        <div class="overflow-hidden rounded-3xl w-110 h-110">
                            <img src={{image}} alt="Sutatausa" class="w-full h-full object-cover">
                        </div>
                    {% endfor %}
                </div>

            </div>
        {% endfor %}
        
    </div>
{% endblock content %}