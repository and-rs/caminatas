{% extends 'base.jinja' %}

{% block content %}
    <div class="flex flex-col justify-center items-center w-full h-content">

        {% for walk in walks %}
            <div class="flex flex-col pb-8 border-b border-gray-300">

                <div class="flex gap-16 justify-around items-center py-16 px-8">
                    <h1 class="pl-8 text-5xl font-bold">{{ walk.name }}</h1>
                    <p class="px-8 text-balance">{{ walk.description }}</p>
                </div>

                <div class="flex justify-around items-center">
                    {% for image in walk.images %}
                        <div class="overflow-hidden rounded-3xl w-110 h-110">
                            <img src={{ image }} alt="Sutatausa" class="object-cover w-full h-full">
                        </div>
                    {% endfor %}
                </div>

            </div>
        {% endfor %}

    </div>
{% endblock content %}

