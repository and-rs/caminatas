        </div>

        <div class="mx-8 overflow-hidden rounded-3xl w-2xl h-110">
            <img id="changeImage" src="/static/images/bg1.png" class="w-full h-full object-cover"/>
        </div>

        <script>
            const imgToChange = document.getElementById('changeImage');
            const images = ['/static/images/bg1.png', '/static/images/forest.jpg', '/static/images/trail.jpg', '/static/images/trees.jpg'];
            let currentIndex = 0;
            
            function changeImage() {
                imgToChange.classList.add('opacity-0');
                imgToChange.src = images[currentIndex];
                currentIndex = (currentIndex + 1) % images.length;
                setTimeout(() => {
                    imgToChange.classList.remove('opacity-0');
                }, 500);
            }

            setInterval(changeImage, 5000);
        </script>

    </div>
    
{% endblock content %}
