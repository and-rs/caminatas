{% macro btn_icon(aria, url, icon_path) %}
    <a href="{{ url }}"
       aria-label="{{ aria }}"
       target="_blank"
       class="flex justify-center items-center p-2 rounded-2xl shadow-md transition-transform duration-300 ease-in-out hover:scale-110 bg-secondary w-13 h-13">
        <svg class="size-10 aspect-square fill-primary-foreground">
            <use xlink:href="{{ icon_path }}"></use>
        </svg>
    </a>
{% endmacro %}
